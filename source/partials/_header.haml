%header
  %a.md-hide.lg-hide.fixed.z1.t0.r0.p3{ href: "javascript:void(0)", onclick: "showMenu()" }
    %svg{ height: "10", viewbox: "0 0 20 10", width: "20" }
      %title Toggle Menu
      %path{ d: "M1 9h18M1 1h18", fill: "none", stroke: "#000000", "stroke-linecap" => "square" }

  %nav.js-menu.md-hide.lg-hide.fixed.z2.t0.l0.transformY-neg-200per.transition-transform.min-h-100vh.h-100.w-100vw.bg-grey-darker
    %a.absolute.t0.r0.p3{ href: "javascript:void(0)", onclick: "hideMenu()" }
      %svg{ height: "15", viewbox: "0 0 14 12"}
        %title Close Menu
        %path{ d: "M13 0L1 12m12 0L1 0", fill: "none", stroke: "#ffffff", "stroke-linecap" => "square" }
    %ul.no-list-type.flex.flex-column.justify-center.my12.font-large.semi.spaced.center.uppercase
      %li.mb6
        %a.white{ href: "#about-the-film", onclick: "hideMenu()" } Film
      %li.mb6
        %a.white{ href: "#event-details", onclick: "hideMenu()" } Event
      %li.mb6
        %a.white{ href: "#event-schedule", onclick: "hideMenu()" } Schedule
      %li
        %a.white{ href: "#event-partners", onclick: "hideMenu()" } Partners

