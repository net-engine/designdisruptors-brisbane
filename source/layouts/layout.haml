!!!
%html{ dir: 'ltr', lang: 'en' }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport" }
    %title Design Disruptors | Brisbane | 28 July 2016

    / Meta Tags
    = partial "partials/meta"

    / Favicon
    = partial "partials/favicon"

    / Stylesheet
    / = partial "partials/styles"
    = stylesheet_link_tag "site"

    / Typekit Loading Styles
    :css
      .wf-loading h1,
      .wf-loading h2,
      .wf-loading h3,
      .wf-loading h4,
      .wf-loading h5,
      .wf-loading h6,
      .wf-loading p,
      .wf-loading span,
      .wf-loading div,
      .wf-loading a {
        color: transparent !important;
        visibility: hidden !important;
      }

    / JavaScript
    = javascript_include_tag :all

  %body.min-h-100.flex.flex-column
    = partial "partials/header"
    = yield


  / Typekit
  %script{ src: "//use.typekit.net/eyg5dtb.js" }
  :javascript
    try{Typekit.load({ async: true });}catch(e){}



  / Google Analytics
  / = partial "partials/analytics"
